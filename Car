public class Car {


    int lotID;
    int price;
    String make;
    String model;


    EngineSpec engineSpec;

    EngineSpec standardSpec = new EngineSpec("manual", false);
    EngineSpec luxSpec = new EngineSpec("automatic", true);
    //want to increase price of car object by 10,000

    EngineSpec vintageSpec = new EngineSpec();
    //want to increase price of car object by 1,000

    Car(int lotID, int price, String make, String model, EngineSpec engineSpec) {

        this.lotID = lotID;
        this.price = price;
        this.make = make;
        this.model = model;
        this.engineSpec = engineSpec;
//        this.engineSpec.transmission;
//        this.engineSpec.isLuxury;
    }

    Car() {

    }

    public int getLotID() {
        return lotID;
    }

    public void setLotID(int lotID) {
        this.lotID = lotID;
    }

    public int getPrice() {
        return price;
    }

    public void setPrice(int price) {
        this.price = price;
    }

    public String getMake() {
        return make;
    }

    public void setMake(String make) {
        this.make = make;
    }

    public String getModel() {
        return model;
    }

    public void setModel(String model) {
        this.model = model;
    }

    public EngineSpec getEngineSpec(){
        return this.engineSpec;
    }



    @Override
    public String toString(){
        return "Car on carlot: " + " Lot spot (ID) " + this.lotID + " cost: " + this.price + " Car make " + this.make + " " + this.model + " Specs: " + " Tranmission:" + this.engineSpec.transmission + " luxury class: " + this.engineSpec.isLuxury ;
     }

}
